    </component>
    -->
        <component name="microphone" 
                    type="edu.cmu.sphinx.frontend.util.Microphone">
            <property name="closeBetweenUtterances" value="false"/>
        </component>
   
    <component name="dataBlocker1" type="edu.cmu.sphinx.frontend.DataBlocker"/>

    <component name="speechClassifier1"
               type="edu.cmu.sphinx.frontend.endpoint.SpeechClassifier">
        <property name="useSnrThreshold" value="false"/>
        <property name="threshold" value="13"/>
        <property name="debug" value="true"/>
    </component>
    
    <component name="nonSpeechDataFilter1" 
               type="edu.cmu.sphinx.frontend.endpoint.NonSpeechDataFilter"/>
    
    <component name="speechMarker1" 
               type="edu.cmu.sphinx.frontend.endpoint.SpeechMarker">
        <property name="speechTrailer" value="500"/>
        <property name="endSilence" value="500"/>
        <property name="startSpeech" value="50"/>
        <property name="speechLeader" value="500"/>
    </component>
    
    <component name="speechDataMonitor1"
               type="org.speechforge.cairo.rtp.server.sphinx.SpeechDataMonitor"/>
    
    <component name="preemphasizer1"
               type="edu.cmu.sphinx.frontend.filter.Preemphasizer"/>
    
    <component name="windower1" 
               type="edu.cmu.sphinx.frontend.window.RaisedCosineWindower"/>
    
    <component name="fft1" 
               type="edu.cmu.sphinx.frontend.transform.DiscreteFourierTransform"/>
    
    <component name="melFilterBank1" 
               type="edu.cmu.sphinx.frontend.frequencywarp.MelFrequencyFilterBank">
        <property name="minimumFrequency" value="200"/>
        <property name="maximumFrequency" value="3500"/>
        <property name="numberFilters" value="31"/>
    </component>
    
    <component name="dct1" 
               type="edu.cmu.sphinx.frontend.transform.DiscreteCosineTransform"/>
    
    <component name="liveCMN1" 
               type="edu.cmu.sphinx.frontend.feature.LiveCMN"/>
    
    <component name="featureExtraction1" 
               type="edu.cmu.sphinx.frontend.feature.DeltasFeatureExtractor"/>
    
    
    
    <!-- ******************************************************* -->
    <!--  frontend                                               -->
    <!-- ******************************************************* -->
    
    <component name="frontend1" type="edu.cmu.sphinx.frontend.FrontEnd">
        <propertylist name="pipeline">
            <!--item>audioFileDataSource</item-->
            <!--item>microphone</item-->
            <item>primaryInput1</item>
            <!--item>dataBlocker1</item-->
            <item>speechClassifier1</item>
            <item>speechMarker1</item>
            <item>speechDataMonitor1</item>
            <!--item>nonSpeechDataFilter1</item-->
            <item>speechDataRecorder1</item>
            <item>preemphasizer1</item>
            <!--item>dither1</item-->
            <item>windower1</item>
            <item>fft1</item>
            <item>melFilterBank1</item>
            <item>dct1</item>
            <item>liveCMN1</item>
            <item>featureExtraction1</item>
            <!--item>LDA1</item-->
        </propertylist>
    </component>
    
    <component name="audioFileDataSource" type="edu.cmu.sphinx.frontend.util.AudioFileDataSource"/>
    
    <component name="speechDataRecorder1"
               type="org.speechforge.cairo.rtp.server.sphinx.SpeechDataRecorder">
        <property name="filepath" value="/home/tjr/logs/"/>
        <property name="prefix" value=""/>
        <property name="postfix" value="_arpa"/>
    </component>
    
    <component name="primaryInput1"
               type="org.speechforge.cairo.rtp.server.sphinx.RawAudioProcessor"/>
    
    <!-- ******************************************************* -->
    <!--  monitors                                               -->
    <!-- ******************************************************* -->
    
    <component name="accuracyTracker1" 
               type="edu.cmu.sphinx.instrumentation.BestPathAccuracyTracker">
        <property name="recognizer" value="${recognizer1}"/>
        <property name="showRawResults" value="false"/>
        <property name="showAlignedResults" value="false"/>
    </component>
    
    <component name="memoryTracker1" 
               type="edu.cmu.sphinx.instrumentation.MemoryTracker">
        <property name="recognizer" value="${recognizer1}"/>
        <property name="showDetails" value="false"/>
        <property name="showSummary" value="false"/>
    </component>
    
    <component name="speedTracker1" 
               type="edu.cmu.sphinx.instrumentation.SpeedTracker">
        <property name="recognizer" value="${recognizer1}"/>
        <property name="frontend" value="${frontend1}"/>
        <property name="showDetails" value="false"/>
    </component>

    <component name="recognizerMonitor1" 
               type="edu.cmu.sphinx.instrumentation.RecognizerMonitor">
        <property name="recognizer" value="${recognizer1}"/>
        <propertylist name="allocatedMonitors">
            <item>configMonitor1 </item>
        </propertylist>
    </component>
    
    <component name="configMonitor1" 
               type="edu.cmu.sphinx.instrumentation.ConfigMonitor">
        <property name="showConfig" value="false"/>
    </component>
    
    
    <!-- ******************************************************* -->
    <!--  Miscellaneous components                               -->
    <!-- ******************************************************* -->
    
    <component name="logMath" type="edu.cmu.sphinx.util.LogMath">
        <property name="logBase" value="1.0001"/>
        <property name="useAddTable" value="true"/>
    </component>
</config>