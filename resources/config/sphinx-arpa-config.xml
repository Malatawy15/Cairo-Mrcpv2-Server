<!-- ******************************************************** -->
<!--  biship  configuration file                              -->
<!-- ******************************************************** -->

<config>        
    <!-- ******************************************************** -->
    <!-- frequently tuned properties                              -->
    <!-- ******************************************************** --> 
    <property name="absoluteBeamWidth1"  value="5000"/>
    <property name="relativeBeamWidth1"  value="1E-120"/>
    <property name="absoluteWordBeamWidth1" value="200"/>
    <property name="relativeWordBeamWidth1" value="1E-80"/>
    <property name="wordInsertionProbability1" value="0.7"/>
    <property name="languageWeight1" value="10.5"/>
    <property name="silenceInsertionProbability1" value=".1"/>
    <property name="frontend1" value="frontend1"/>
    <property name="recognizer1" value="recognizer1"/>
    <property name="showCreations1" value="false"/>

    <property name="amLocation" value="resource:/WSJ_8gau_13dCep_8kHz_31mel_200Hz_3500Hz"/>
    <property name="amDataLocation" value="cd_continuous_8gau/"/>
    <property name="amModelDefinition" value="etc/WSJ_8gau_13dCep_8kHz_31mel_200Hz_3500Hz.4000.mdef"/>
    <property name="dictionaryPath"  value="resource:/WSJ_8gau_13dCep_8kHz_31mel_200Hz_3500Hz/dict/cmudict.0.6d"/>
    <property name="fillerPath" value="resource:/WSJ_8gau_13dCep_8kHz_31mel_200Hz_3500Hz/dict/fillerdict"/>
    
    <property name="startupLanguageModel" value="/home/tjr/models/startup.arpa.lm"/>
    
    <!-- ******************************************************** -->
    <!-- word recognizer configuration                            -->
    <!-- ******************************************************** --> 
    
    <component name="recognizer1" 
                          type="edu.cmu.sphinx.recognizer.Recognizer">
        <property name="decoder" value="decoder1"/>
        <!--<propertylist name="monitors">
            <item>accuracyTracker </item>
            <item>speedTracker </item>
            <item>memoryTracker </item>
            <item>recognizerMonitor </item>
        </propertylist>-->
    </component>
    
    <!-- ******************************************************** -->
    <!-- The Decoder   configuration                              -->
    <!-- ******************************************************** --> 
    
    <component name="decoder1" type="edu.cmu.sphinx.decoder.Decoder">
        <property name="searchManager" value="wordPruningSearchManager1"/>
        <!--<property name="featureBlockSize" value="50"/>-->
    </component>
    
    <!-- ******************************************************** -->
    <!-- The Search Manager                                       -->
    <!-- ******************************************************** --> 
    
    <component name="wordPruningSearchManager1" 
    type="edu.cmu.sphinx.decoder.search.SimpleBreadthFirstSearchManager">
        <property name="logMath" value="logMath"/>
        <property name="linguist" value="lexTreeLinguist1"/>
        <property name="pruner" value="trivialPruner1"/>
        <property name="scorer" value="threadedScorer1"/>
        <property name="activeListFactory" value="activeListManager1"/>
        <!--property name="growSkipInterval" value="0"/>
        <property name="checkStateOrder" value="false"/>
        <property name="buildWordLattice" value="false"/>
        <property name="acousticLookaheadFrames" value="1.7"/>
        <property name="relativeBeamWidth" value="${relativeBeamWidth1}"/-->
    </component>
    
    
    <!-- ******************************************************** -->
    <!-- The Active Lists                                         -->
    <!-- ******************************************************** --> 
    
    <component name="activeListManager1" 
             type="edu.cmu.sphinx.decoder.search.SortingActiveListFactory">
        <property name="logMath" value="logMath"/>
        <property name="absoluteBeamWidth" value="${absoluteBeamWidth1}"/>
        <property name="relativeBeamWidth" value="${relativeBeamWidth1}"/>
        <!--propertylist name="activeListFactories">
	    <item>standardActiveListFactory1</item>
	    <item>wordActiveListFactory1</item>
	    <item>wordActiveListFactory1</item>
	    <item>standardActiveListFactory1</item>
	    <item>standardActiveListFactory1</item>
	    <item>standardActiveListFactory1</item>
	</propertylist-->
    </component>
    
    <component name="standardActiveListFactory1" 
             type="edu.cmu.sphinx.decoder.search.PartitionActiveListFactory">
        <property name="logMath" value="logMath"/>
        <property name="absoluteBeamWidth" value="${absoluteBeamWidth1}"/>
        <property name="relativeBeamWidth" value="${relativeBeamWidth1}"/>
    </component>
    
    <component name="wordActiveListFactory1" 
             type="edu.cmu.sphinx.decoder.search.PartitionActiveListFactory">
        <property name="logMath" value="logMath"/>
        <property name="absoluteBeamWidth" value="${absoluteWordBeamWidth1}"/>
        <property name="relativeBeamWidth" value="${relativeWordBeamWidth1}"/>
    </component>
    
    <!-- ******************************************************** -->
    <!-- The Pruner                                               -->
    <!-- ******************************************************** --> 
    <component name="trivialPruner1" 
                type="edu.cmu.sphinx.decoder.pruner.SimplePruner"/>
    
    <!-- ******************************************************** -->
    <!-- TheScorer                                                -->
    <!-- ******************************************************** --> 
    <component name="threadedScorer1" 
                type="edu.cmu.sphinx.decoder.scorer.ThreadedAcousticScorer">
        <property name="frontend" value="${frontend1}"/>
    </component>
    
    <!-- ******************************************************** -->
    <!-- The linguist  configuration                              -->
    <!-- ******************************************************** -->
    
    <component name="lexTreeLinguist1" 
                type="edu.cmu.sphinx.linguist.lextree.LexTreeLinguist">
        <property name="logMath" value="logMath"/>
        <property name="acousticModel" value="wsj1"/>
        <property name="languageModel" value="trigramModel1"/>
        <property name="dictionary" value="dictionary1"/>
        <property name="addFillerWords" value="false"/>
        <property name="fillerInsertionProbability" value="1E-10"/>
        <property name="generateUnitStates" value="false"/>
        <property name="wantUnigramSmear" value="true"/>
        <property name="unigramSmearWeight" value="1"/>
        <property name="wordInsertionProbability" 
                value="${wordInsertionProbability1}"/>
        <property name="silenceInsertionProbability" 
                value="${silenceInsertionProbability1}"/>
        <property name="languageWeight" value="${languageWeight1}"/>
        <property name="unitManager" value="unitManager1"/>
    </component>
    
    
    <!-- ******************************************************** -->
    <!-- The Dictionary configuration                            -->
    <!-- ******************************************************** -->
    <component name="dictionary1" 
        type="edu.cmu.sphinx.linguist.dictionary.FastDictionary">
        <property name="dictionaryPath"
                  value="${dictionaryPath}"/>
        <property name="fillerPath" 
	          value="${fillerPath}"/>
        <property name="addSilEndingPronunciation" value="false"/>
        <property name="wordReplacement" value="&lt;sil&gt;"/>
        <property name="unitManager" value="unitManager1"/>
    </component>
    

    <!-- ******************************************************** -->
    <!-- The Language Model configuration                         -->
    <!-- ******************************************************** -->
    <component name="trigramModel1" 
        type="edu.cmu.sphinx.linguist.language.ngram.SimpleNGramModel">
        <property name="location" 
            value="${startupLanguageModel}"/>
        <property name="logMath" value="logMath"/>
        <property name="dictionary" value="dictionary1"/>
        <property name="maxDepth" value="3"/>
        <property name="unigramWeight" value=".7"/>
    </component>
    
    
    <!-- ******************************************************** -->
    <!-- The acoustic model configuration                         -->
    <!-- ******************************************************** -->
    <component name="wsj1"
               type="edu.cmu.sphinx.linguist.acoustic.tiedstate.TiedStateAcousticModel">
        <property name="loader" value="wsjLoader1"/>
        <property name="unitManager" value="unitManager1"/>
    </component>

    <component name="wsjLoader1" type="edu.cmu.sphinx.linguist.acoustic.tiedstate.Sphinx3Loader">
        <property name="logMath" value="logMath"/>
        <property name="unitManager" value="unitManager1"/>
        <property name="location" value="${amLocation}"/>              
        <property name="dataLocation" value="${amDataLocation}"/>
        <property name="modelDefinition" value="${amModelDefinition}"/>
    </component>

    <!-- ******************************************************** -->
    <!-- The unit manager configuration                           -->
    <!-- ******************************************************** -->

    <component name="unitManager1" 
        type="edu.cmu.sphinx.linguist.acoustic.UnitManager"/>

    
    <!-- ******************************************************** -->
    <!-- The frontend configuration                               -->
    <!-- ******************************************************** -->
    
